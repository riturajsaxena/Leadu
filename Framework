8.3 Data Model (simplified)
SQL
-- Tenants & Users
CREATE TABLE tenant (
id UUID PRIMARY KEY,
name TEXT,
plan TEXT, -- launch/growth/scale/enterprise
created_at TIMESTAMP
);

CREATE TABLE user_account (
id UUID PRIMARY KEY,
tenant_id UUID REFERENCES tenant(id),
email TEXT UNIQUE,
role TEXT, -- admin, agent, analyst
created_at TIMESTAMP
);

-- Contacts & Consent
CREATE TABLE contact (
id UUID PRIMARY KEY,
tenant_id UUID REFERENCES tenant(id),
phone_e164 TEXT,
country_code TEXT,
consent_status TEXT, -- opt_in, opt_out
attributes JSONB, -- CRM fields
created_at TIMESTAMP
);

-- Templates & Policy
CREATE TABLE template (
id UUID PRIMARY KEY,
tenant_id UUID REFERENCES tenant(id),
name TEXT,
category TEXT, -- marketing|utility|authentication|service
content JSONB, -- body, buttons, media
status TEXT, -- submitted|approved|rejected
created_at TIMESTAMP
);

-- Conversations & Windows
CREATE TABLE conversation_window (
id UUID PRIMARY KEY,
contact_id UUID REFERENCES contact(id),
window_type TEXT, -- service_24h|ctwa_72h
opened_at TIMESTAMP,
expires_at TIMESTAMP,
source TEXT, -- inbound|ctwa_ad_click
);

-- Messages
CREATE TABLE message_log (
id UUID PRIMARY KEY,
tenant_id UUID REFERENCES tenant(id),
contact_id UUID REFERENCES contact(id),
template_id UUID REFERENCES template(id),
message_type TEXT, -- template|freeform
category TEXT, -- marketing|utility|authentication|service
paid_flag BOOLEAN, -- false if within free window
meta_fee_numeric NUMERIC,
markup_numeric NUMERIC,
delivery_status TEXT, -- sent|delivered|read|failed
sent_at TIMESTAMP
);
